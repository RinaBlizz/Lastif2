<Window x:Class="Lastif.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lastif"
        mc:Ignorable="d"
        Title="Функции" Height="250" Width="400" Background="Green">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Введите х:"/>
            <TextBox x:Name="X"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label Content="Введите y:"/>
            <TextBox x:Name="Y"/>
        </StackPanel>
        <Button Grid.Row="2" Content="Вычислить" Margin="10 10 10 10" Click="Button_Click"/>
        <TextBlock Grid.Row="3" x:Name="Result"/>
    </Grid>
</Window>
